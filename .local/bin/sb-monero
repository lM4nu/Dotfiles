#!/bin/sh

case $BLOCK_BUTTON in
	1) setsid "$TERMINAL" -e less -Srf ~/.local/share/monerochart && exit ;;
	3) "$TERMINAL" -e "$EDITOR" "$0"
esac

moneroprice="$(curl -sf rate.sx/1xmr)"

personalmonero="0.035829173139" 
personalmonerotrunc="$(echo "$moneroprice" \* "$personalmonero" | bc -l)"

[ -z "$moneroprice" ] && exit 1

printf " %0.2f(%0.2f)" "$personalmonerotrunc" "$moneroprice"

curl -sf rate.sx/xmr@2w > ~/.local/share/monerochart
