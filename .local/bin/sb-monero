#!/bin/sh

case $BLOCK_BUTTON in
	1) setsid "$TERMINAL" -e less -Srf ~/.local/share/monerochart && exit ;;
	3) "$TERMINAL" -e $EDITOR "$0"
esac

moneroprice="$(curl -sf rate.sx/1xmr)"
monerotrunc="$(echo "$moneroprice" | grep -Eo '^[0-9]*\.[0-9]{2}')"

personalmonero="0.035829173139" 
personalmonerotrunc="$(echo "$moneroprice" \* "$personalmonero" | bc -l | grep -Eo '^[0-9]*\.[0-9]{2}')"

echo $personalmonerotrunc\($monerotrunc\)

curl -sf rate.sx/xmr > ~/.local/share/monerochart
