#!/bin/sh

case $BLOCK_BUTTON in
	1) setsid "$TERMINAL" -e less -Srf ~/.local/share/btcchart && exit ;;
	3) "$TERMINAL" -e "$EDITOR" "$0"
esac

btcprice="$(curl -sf rate.sx/1btc)"
btctrunc="$(echo "$btcprice" | grep -Eo '^[0-9]*\.[0-9]{2}')"

echo "$btctrunc"

curl -sf rate.sx/btc > ~/.local/share/btcchart
