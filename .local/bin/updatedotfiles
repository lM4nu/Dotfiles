#!/bin/sh

dotfilespath=~/.config/dotfiles
configpath=~/.config

rm -rf $dotfilespath/.config/alacritty/ $dotfilespath/.config/dunst/ $dotfilespath/.config/i3/ $dotfilespath/.config/i3blocks/ $dotfilespath/.config/lf/ $dotfilespath/.config/mpd/ $dotfilespath/.config/mpv/ $dotfilespath/.config/ncmpcpp/ $dotfilespath/.config/newsboat/ $dotfilespath/.config/npm/ $dotfilespath/.config/nvim/ $dotfilespath/.config/sxhkd/ $dotfilespath/.config/sxiv/ $dotfilespath/.config/tmux/ $dotfilespath/.config/x11/ $dotfilespath/.config/.aliases $dotfilespath/.local/bin $dotfilespath/suckless $dotfilespath/.bashrc $dotfilespath/.profile

cp -r $configpath/alacritty/ $configpath/dunst/ $configpath/i3/ $configpath/i3blocks/ $configpath/lf/ $configpath/mpd/ $configpath/mpv/ $configpath/ncmpcpp/ $configpath/newsboat/ $configpath/npm/ $configpath/nvim/ $configpath/sxhkd/ $configpath/sxiv/ $configpath/tmux/ $configpath/x11/ $configpath/.aliases $dotfilespath/.config/

cp -r ~/.local/bin $dotfilespath/.local

cp -r ~/Downloads/suckless ~/.bashrc ~/.profile $dotfilespath
