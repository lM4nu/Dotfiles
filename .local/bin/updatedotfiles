#!/bin/sh

dotfilespath=~/.config/dotfiles
configpath=~/.config

rm -vrf \
$dotfilespath/.config/* \
$dotfilespath/.config/.aliases \
$dotfilespath/.config/mimeapps.list \
$dotfilespath/.local/bin \
$dotfilespath/.local/share/applications \
$dotfilespath/.zprofile
#$dotfilespath/suckless \

cp -vr \
$configpath/alacritty \
$configpath/dunst \
$configpath/fontconfig \
$configpath/gtk-2.0 \
$configpath/gtk-3.0 \
$configpath/i3blocks \
$configpath/lf \
$configpath/mpd \
$configpath/mpv \
$configpath/ncmpcpp \
$configpath/newsboat \
$configpath/npm \
$configpath/nvim \
$configpath/pinentry \
$configpath/sxhkd \
$configpath/sxiv \
$configpath/tmux \
$configpath/transmission-daemon \
$configpath/x11/ \
$configpath/zathura \
$configpath/zsh \
$configpath/.aliases \
$configpath/mimeapps.list \
$dotfilespath/.config/

cp -vr ~/.local/bin $dotfilespath/.local

cp -vr ~/.local/share/applications $dotfilespath/.local/share

cp -vr ~/.zprofile $dotfilespath
#cp -vr ~/Downloads/suckless ~/.zprofile $dotfilespath
