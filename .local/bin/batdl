#!/bin/sh

file="$HOME/.local/chapter"
[ ! -f "$file" ] && printf "0" > "$file"
chapter="$(cat "$file")"

upachapter(){
	clear
	printf "Next Chapter? [Y/n] "
	read -r choice
	[ -z "$choice" ] || [ "$choice" = "Y" ] || [ "$choice" = "y" ] && chapter=$((chapter + 1))
	echo "$chapter" > "$file"
}

magnet=""
webtorrent "$magnet" --mpv --player-args="--save-position-on-quit" -s "$chapter" -u 1 "$@" ; upachapter ; batdl
