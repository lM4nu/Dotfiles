#!/bin/sh

#nmcli dev wifi list | grep -E '^\*' | sed -E "s/.*s\s{2}//;s/\s+.*$/%/"
tail -n1 /proc/net/wireless | sed -E "s/\s+/|/g" | cut -d'|' -f3 | sed "s/\.//;s/$/%/"

case $BLOCK_BUTTON in
	1) notify-send "$(nmcli --fields ssid,mode,signal dev wifi list | sed "/^SSID\s*MODE\s*SIGNAL/ d;s/\s*Infra\s//;s/\s*$/%/")";;
	3) "$TERMINAL" -e "$EDITOR" "$0";;
esac
