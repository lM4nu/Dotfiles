#!/bin/sh
#logindconf="/etc/systemd/logind.conf"
logindconf="/etc/elogind/logind.conf"

lidswitchvalue="$(grep -E "^HandleLidSwitch=.*$" "$logindconf" | cut -d'=' -f2)"


[ "$lidswitchvalue" = "ignore" ] && lidswitchopt="Use Lid" || lidswitchopt="Ignore Lid"

choice=$(printf "Power Off\nReboot\nLock Screen\nTurn off Screen\n$lidswitchopt" | dmenu -i -sb '#f00')

case $choice in
	"Power Off") sudo poweroff;;
	"Reboot") sudo reboot;;
	"Lock Screen") slock;;
	"Turn off Screen") xset dpms force off;;
	"Use Lid") sudo sed -i "s/^HandleLidSwitch=ignore/HandleLidSwitch=suspend/" "$logindconf" ; sudo loginctl reload ;;#sudo systemctl kill -s HUP systemd-logind.service ;;
	"Ignore Lid") sudo sed -i "s/^HandleLidSwitch=suspend/HandleLidSwitch=ignore/" "$logindconf" ; sudo loginctl reload ;;#sudo systemctl kill -s HUP systemd-logind.service ;;
	*) exit ;;
esac
