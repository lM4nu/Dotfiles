#!/bin/sh

line=$(grep -E background_opacity:.[0-9]\.[0-9] ~/.config/alacritty/alacritty.yml)
value=$(echo $line | grep -Eo [0-9]\.[0-9]$ )

increase(){
	if [ "$1" = 0.9 ] || [ "$1" = 1.0 ]; then
		newvalue="1.0"
	else
		newvalue=$(echo 0$(echo $1 + 0.1 | bc ))
	fi
}

decrease(){
	if [ "$1" = 0.0 ] || [ "$1" = 0.1 ]; then
		newvalue="0.0"
	else
		newvalue=$(echo 0$(echo $1 - 0.1 | bc ))
	fi
}

if [ "$1" = "-inc" ]; then
	increase $value
	newline=$(echo "background_opacity: $newvalue")
	sed -i "s/${line}/${newline}/g" ~/.config/alacritty/alacritty.yml
else
	decrease $value
	newline=$(echo "background_opacity: $newvalue")
	sed -i "s/${line}/${newline}/g" ~/.config/alacritty/alacritty.yml
fi

