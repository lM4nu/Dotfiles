#!/bin/bash
file="$(basename "$1")"
files=$(ls | grep -iE "\.(jpe?g|png|gif|webp|tiff|bmp)$")
counter=0

while read -r i; do
	counter=$((counter + 1))
	if [ "$i" = "$file" ]; then
		break
	fi
done <<< "$files"

#echo $files | xargs sxiv -n $counter
while read -r i; do echo "$i"; done <<< "$files" | sxiv -ai -n $counter
