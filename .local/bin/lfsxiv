#!/bin/bash
file="$(basename "$1")"
files=$(ls . | grep -i "\.jpg$\|\.png$\|\.jpeg$\|\.gif$\|\.webp")
counter=0

while read i; do
	counter=$((counter + 1))
	if [ "$i" = "$file" ]; then
		break
	fi
done <<< $files

#echo $files | xargs sxiv -n $counter
while read i; do echo "$i"; done <<< $files | sxiv -ai -n $counter
