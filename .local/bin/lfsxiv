#!/bin/sh
file="$(basename "$1")"
files=$(ls . | grep "\.jpg$\|\.png$\|\.jpeg$\|\.webp\|\.gif$\|\.JPG$\|\.PNG$\|\.JPEG$\|\.WEBP\|\.GIF$")
counter=0

while read i; do
	counter=$((counter + 1))
	if [ "$i" = "$file" ]; then
		break
	fi
done <<< $files

#echo $files | xargs sxiv -n $counter
while read i; do echo "$i"; done <<< $files | sxiv -i -n $counter
