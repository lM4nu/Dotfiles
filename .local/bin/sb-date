#!/bin/sh
date=$(date '+%d-%m %a %H:%M')
hour=$(date '+%I')
case $hour in
	01) clock="🕐" ;;
	02) clock="🕑" ;;
	03) clock="🕒" ;;
	04) clock="🕓" ;;
	05) clock="🕔" ;;
	06) clock="🕕" ;;
	07) clock="🕖" ;;
	08) clock="🕗" ;;
	09) clock="🕘" ;;
	10) clock="🕙" ;;
	11) clock="🕚" ;;
	12) clock="🕛" ;;
esac

echo $date $clock
