#!/bin/sh
date=$(date '+%d/%m %a %H:%M')

case $BLOCK_BUTTON in 
	1) notify-send " " "<b>$(cal --color=always | sed "s/..7m/<span fgcolor=\"yellow\">/;s/..27m/<\/span>/")</b>" && notify-send "$(calcurse -d7)";;
	3) "$TERMINAL" -e "$EDITOR" "$0";;
esac

case "$(date '+%I')" in
	01) clock="🕐" ;;
	02) clock="🕑" ;;
	03) clock="🕒" ;;
	04) clock="🕓" ;;
	05) clock="🕔" ;;
	06) clock="🕕" ;;
	07) clock="🕖" ;;
	08) clock="🕗" ;;
	09) clock="🕘" ;;
	10) clock="🕙" ;;
	11) clock="🕚" ;;
	12) clock="🕛" ;;
esac

echo "$date $clock"
