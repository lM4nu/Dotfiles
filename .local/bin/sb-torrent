#!/bin/sh
pidof transmission-daemon >/dev/null || exit
transmission-remote -l | grep % |
	sed " # The letters are for sorting and will not appear.
	s/.*Stopped.*/A 🛑/;
	s/.*Seeding.*/Z 🌱/;
	s/.*100%.*/N ✅/;
	s/.*Idle.*/B 🕰️/;
	s/.*Uploading.*/L ⬆️/;
	s/.*%.*/M ⬇️/" |
		sort -h | uniq -c | awk '{print $3 $1}' | paste -sd ' ' - | sed "s/^$/✅0/"

case $BLOCK_BUTTON in
	1) notify-send "$(transmission-remote -l | tail -n +2 | head -n -1 | sed -E "s/^\s*//;s/\s{2,}/;/g" | cut -d';' -f2,9,10,11,12,13 | sed "s/;/ /g")" ;;
	2) setsid -f "$TERMINAL" -e tremc ;;
	3) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac
