#!/bin/sh 
touchpadId=$(xinput -list | grep "Synaptics TM2749-001\| Synaptics TouchPad" | grep -Eo "id=[0-9]*" | cut -d'=' -f2)
currentState=$(xinput --list-props "$touchpadId" | grep 'Device Enabled' | awk '{print $4}')
#if [ $currentState -eq 1 ]
#then
    #xinput --disable $touchpadId && notify-send -t 900 "üñ±Ô∏è DISABLED"
#else
    #xinput --enable $touchpadId && notify-send -t 900 "üñ±Ô∏è ENABLED"
#fi
[ "$currentState" -eq 1 ] && (xinput --disable "$touchpadId" && notify-send -t 900 "üñ±Ô∏è DISABLED") || (xinput --enable "$touchpadId" && notify-send -t 900 "üñ±Ô∏è ENABLED")
