#!/bin/sh

case $BLOCK_BUTTON in
	1) pamixer --toggle-mute;;
	3) "$TERMINAL" -e "$EDITOR" "$0";;
	4) pamixer -i 5;;
	5) pamixer -d 5;;
esac

[ "$(pamixer --get-mute)" = true ] && echo "     ðŸ”‡    " && exit

vol="$(pamixer --get-volume)"

if [ "$vol" -gt "70" ]; then
	icon="ðŸ”Š"
elif [ "$vol" -lt "30" ]; then
	icon="ðŸ”ˆ"
else
	icon="ðŸ”‰"
fi

echo "$icon $vol%"
