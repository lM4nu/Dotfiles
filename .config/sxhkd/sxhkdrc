super + Return
	$TERMINAL

super + BackSpace
	offmenu

super + shift + h
	$TERMINAL -e htop

super + shift + p
	passmenu

super + shift + k
	keepassxc

super + shift + v
	videoclipboard

super + i
	invid

super + m
	$TERMINAL -e ncmpcpp

super + shift + m
	$TERMINAL -e tremc

super + alt + m
	td-toggle

super + n
	$TERMINAL -e neomutt
	#$TERMINAL -o font.size=7.5 -e newsboat

super + shift + e
	emojis h

super + e
	emojis

super + shift + d
	discord

super + w
	brave

super + shift + w
	brave --incognito

super + shift + b
	bt-toggle

super + z
	zoom

super + shift + z
	pkill zoom
XF86MonBrightnessDown
	xbacklight -dec 5

XF86MonBrightnessUp
	xbacklight -inc 5

XF86AudioMute
	pamixer --toggle-mute & pkill -RTMIN+9 dwmblocks

XF86AudioLowerVolume
	pamixer -d 5 & pkill -RTMIN+9 dwmblocks

XF86AudioRaiseVolume
	pamixer -i 5 & pkill -RTMIN+9 dwmblocks

XF86AudioPrev
	mpc prev

XF86AudioPlay
	mpc toggle

XF86AudioNext
	mpc next

super + minus
	mpc volume -5 

super + equal
	mpc volume +5 

super + x
	maim | tee ~/.local/screenshots/$(date +%Y-%m-%d-%H:%M:%S).png | xclip -selection clipboard -t image/png	

super + shift + x
	maim -us | tee ~/.local/screenshots/$(date +%Y-%m-%d-%H:%M:%S).png | xclip -selection clipboard -t image/png	

super + F3
	togglemouse

super + F12
	switchlayout

super + shift + c
	clipmenu

super + r
	qrclipboard

super + shift + r
	qrtoclipboard

super + F5
	sudo systemctl restart NetworkManager
