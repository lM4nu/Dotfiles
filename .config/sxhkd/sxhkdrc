super + Return
	$TERMINAL

super + BackSpace
	offmenu

super + shift + h
	$TERMINAL -e htop

super + shift + p
	passmenu-otp

super + shift + k
	keepassxc

super + shift + v
	videoclipboard

super + i
	invid

super + shift + i
	insomnia

super + m
	$TERMINAL -e ncmpcpp

super + shift + m
	$TERMINAL -e tremc

super + alt + m
	td-toggle

super + n
	$TERMINAL -e neomutt
	#$TERMINAL -o font.size=7.5 -e newsboat

super + shift + e
	emojis h

super + e
	emojis

super + shift + d
	discord --ignore-gpu-blocklist --disable-features=UseOzonePlatform --enable-features=VaapiVideoDecoder,VaapiVideoEncoder --use-gl=desktop --enable-gpu-rasterization --enable-zero-copy

super + w
	$BROWSER

super + shift + w
	dbrowser

super + shift + b
	bt-toggle

super + z
	zoom

super + shift + z
	pkill zoom

XF86MonBrightnessDown
	brightctl -dec
	#xbacklight -dec 5

XF86MonBrightnessUp
	brightctl
	#xbacklight -inc 5

XF86AudioMute
	pamixer --toggle-mute & pkill -RTMIN+9 dwmblocks

XF86AudioLowerVolume
	pamixer -d 5 & pkill -RTMIN+9 dwmblocks

XF86AudioRaiseVolume
	pamixer -i 5 & pkill -RTMIN+9 dwmblocks

XF86AudioPrev
	mpc prev

XF86AudioPlay
	mpc toggle

XF86AudioNext
	mpc next

super + minus
	mpc volume -5 

super + equal
	mpc volume +5 

super + x
	maim | tee ~/.local/screenshots/$(date +%Y-%m-%d-%H:%M:%S).png | xclip -selection clipboard -t image/png	

super + shift + x
	maim -us | tee ~/.local/screenshots/$(date +%Y-%m-%d-%H:%M:%S).png | xclip -selection clipboard -t image/png	

super + F3
	togglemouse

super + F11
	crontog

super + F12
	switchlayout

super + shift + c
	clipmenu

super + r
	qrclipboard

super + shift + r
	qrtoclipboard

super + F5
	sudo systemctl restart NetworkManager
	#sudo rc-service NetworkManager restart
	#sudo rc-service connmand restart
super + shift + F5
	sudo systemctl stop NetworkManager ; pkill nm-applet
	#sudo rc-service NetworkManager stop ; pkill nm-applet
