super + Return
	$TERMINAL

super + p
	$TERMINAL -e pulsemixer

super + BackSpace
	offmenu

super + shift + h
	$TERMINAL -e htop

super + shift + p
	keepassxc

super + shift + v
	notify-send "Opening in mpv" ; mpv "$(xclip -selection clipboard -o)"

super + m
	$TERMINAL -e ncmpcpp

super + shift + m
	$TERMINAL -e tremc

super + n
	$TERMINAL -o font.size=7.5 -e newsboat

super + shift + e
	emojis h

super + e
	emojis

super + shift + d
	discord

super + w
	brave

super + shift + w
	brave --incognito

super + z
	zoom

XF86MonBrightnessDown
	xbacklight -dec 5

XF86MonBrightnessUp
	xbacklight -inc 5

XF86AudioMute
	pamixer --toggle-mute & pkill -RTMIN+8 dwmblocks & pkill -SIGRTMIN+8 i3blocks

XF86AudioLowerVolume
	pamixer -d 5 & pkill -RTMIN+8 dwmblocks & pkill -RTMIN+8 i3blocks

XF86AudioRaiseVolume
	pamixer -i 5 & pkill -RTMIN+8 dwmblocks & pkill -RTMIN+8 i3blocks

XF86AudioPrev
	mpc prev

XF86AudioPlay
	mpc toggle

XF86AudioNext
	mpc next

super + minus
	mpc volume -5 

super + equal
	mpc volume +5 

super + x
	maim | tee ~/.local/screenshots/$(date +%Y-%m-%d-%H:%M:%S).png | xclip -selection clipboard -t image/png	

super + shift + x
	maim -s | tee ~/.local/screenshots/$(date +%Y-%m-%d-%H:%M:%S).png | xclip -selection clipboard -t image/png	

super + F3
	togglemouse

super + F12
	switchlayout

super + shift + c
	clipmenu

super + r
	qrclipboard
