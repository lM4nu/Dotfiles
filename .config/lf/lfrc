set previewer ~/.config/lf/preview
set cleaner ~/.config/lf/cleaner
set hiddenfiles ".*:!.config:!.local:!.bashrc:!.profile:!.cache"
cmd open ${{
    case $(file --mime-type "$f" -b) in
	image/vnd.djvu|application/pdf|application/octet-stream) zathura "$fx" ;;
        text/*) $EDITOR "$f" ;;
	image/*) sxiv "$f" * ;;
	audio/*) mpv "$f" ;;
	video/*) mpv "$f" ;;
	application/pdf|application/vnd*|application/epub*) zathura "$fx" ;;
        *) for f in $fx; do setsid -f $OPENER $f >/dev/null 2>&1; done;;
    esac
}}

cmd setbg "$1"
cmd bulkrename $vidir

map x delete
map ` mark-load
map b $setbg $f
map B bulkrename
map s toggle 
